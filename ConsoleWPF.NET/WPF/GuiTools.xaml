<Window
    x:Class="drzTools.WPF.GuiTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:drzTools.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    MinWidth="200"
    MinHeight="200"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <GroupBox Margin="0">
        <Grid Grid.IsSharedSizeScope="True" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                0
            </TextBlock>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                1
            </TextBlock>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                2
            </TextBlock>
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                3
            </TextBlock>
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                4
            </TextBlock>
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                5
            </TextBlock>
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                6
            </TextBlock>
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                7
            </TextBlock>
            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                8
            </TextBlock>
            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                9
            </TextBlock>
            <TextBlock
                Grid.Row="10"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                10
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                1
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                2
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                3
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                4
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                5
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                6
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Grid.Column="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsVisibilityNumderGrid}">
                7
            </TextBlock>
            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Header="Блоки в чертеже">
                <StackPanel>
                    <ListBox
                        x:Name="ListAllBlocks"
                        MinWidth="250"
                        MinHeight="200"
                        MaxWidth="500"
                        MaxHeight="300" />
                </StackPanel>
            </GroupBox>

            <StackPanel
                Grid.Row="1"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                Margin="5,0,5,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Button Margin="5" Content="---&gt;" />
                <Button Margin="5" Content="&lt;---" />
                <Button Margin="5" Content="&gt;&gt;&gt;" />
                <Button Margin="5" Content="&lt;&lt;&lt;" />
                <Button Margin="5" Content="Выбор" />

            </StackPanel>

            <GroupBox
                Grid.Row="1"
                Grid.Column="5"
                Grid.ColumnSpan="2"
                Header="Блоки для нормализации">
                <StackPanel>
                    <ListBox Width="{Binding ElementName=ListAllBlocks, Path=ActualWidth}" Height="{Binding ElementName=ListAllBlocks, Path=ActualHeight}" />
                </StackPanel>
            </GroupBox>

            <GroupBox
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="6"
                Header="Опции">
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Свойства">
                        <StackPanel>

                            <Grid ShowGridLines="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0">
                                    Тип линии
                                </Label>
                                <RadioButton
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="5"
                                    Content="По блоку"
                                    GroupName="Line" />
                                <RadioButton
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="5"
                                    Content="По слою"
                                    GroupName="Line" />
                                <RadioButton
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="5"
                                    Content="Не менять"
                                    GroupName="Line" />

                                <Label Grid.Row="1" Grid.Column="0">
                                    Цвет
                                </Label>
                                <RadioButton
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="5"
                                    Content="По блоку"
                                    GroupName="Color" />
                                <RadioButton
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="5"
                                    Content="По слою"
                                    GroupName="Color" />
                                <RadioButton
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="5"
                                    Content="Не менять"
                                    GroupName="Color" />

                                <Label Grid.Row="2" Grid.Column="0">
                                    Вес
                                </Label>
                                <RadioButton
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="5"
                                    Content="По блоку"
                                    GroupName="Weight" />
                                <RadioButton
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="5"
                                    Content="По слою"
                                    GroupName="Weight" />
                                <RadioButton
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Margin="5"
                                    Content="Не менять"
                                    GroupName="Weight" />

                                <!--<Label Grid.Row="3" Grid.Column="0">
                                Стиль печати
                                </Label>
                                <RadioButton
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5"
                                Content="По блоку" />
                                <RadioButton
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="5"
                                Content="По слою" />
                                <RadioButton
                                Grid.Row="3"
                                Grid.Column="3"
                                Margin="5"
                                Content="Не менять" />-->

                                <Label Grid.Row="4" Grid.Column="0">
                                    Маскировки
                                </Label>
                                <RadioButton
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="5"
                                    Content="Вперед"
                                    GroupName="Wipeout" />
                                <RadioButton
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    Margin="5"
                                    Content="Назад"
                                    GroupName="Wipeout" />
                                <RadioButton
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Margin="5"
                                    Content="Не менять"
                                    GroupName="Wipeout" />

                                <Label Grid.Row="5" Grid.Column="0">
                                    Штриховки
                                </Label>
                                <RadioButton
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="5"
                                    Content="Вперед"
                                    GroupName="Hatch" />
                                <RadioButton
                                    Grid.Row="5"
                                    Grid.Column="2"
                                    Margin="5"
                                    Content="Назад"
                                    GroupName="Hatch" />
                                <RadioButton
                                    Grid.Row="5"
                                    Grid.Column="3"
                                    Margin="5"
                                    Content="Не менять"
                                    GroupName="Hatch" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Прочее" >
                        <StackPanel>
                            <CheckBox Margin="5" Content="Слой 0" />
                            <CheckBox Margin="5" Content="Ширина полилиний 0" />
                            <CheckBox Margin="5" Content="Установить одинаковые масштабы" />
                            <CheckBox Margin="5" Content="Разрешить расчленение" />
                            <!--<CheckBox Margin="5" Content="Игнорировать заблокированные слои" />-->
                            <!--<CheckBox Margin="5" Content="Включая неименованные (*U)" />-->

                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <GroupBox
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="6"
                Header="Кнопки">
                <DockPanel LastChildFill="False">

                    <Button
                        Width="{Binding ElementName=btnCansel, Path=ActualWidth}"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        Content="Ok"
                        DockPanel.Dock="Left" />
                    <Button
                        x:Name="btnCansel"
                        MinWidth="50"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        Content="Cansel"
                        DockPanel.Dock="Right" />

                </DockPanel>
            </GroupBox>





        </Grid>
    </GroupBox>
</Window>
